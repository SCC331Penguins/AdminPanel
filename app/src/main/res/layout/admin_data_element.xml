<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="830dp"
    android:layout_marginTop="50dp"
    android:layout_height="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/shadow"
    android:backgroundTint="#DDD"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/live_timestamp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#30323b"
        android:gravity="center"
        android:text="12/12/12 12:21:00"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <TextView
        android:id="@+id/live_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5.4"
        android:background="#30323b"
        android:gravity="center"
        android:text="USER REG"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="15sp" />


    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#AAA" />


    <TextView
        android:id="@+id/live_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#30323b"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="New user StoutyAlex - ID: 1"
        android:textAlignment="viewStart"
        android:textColor="#FFF"
        android:textSize="15sp" />


</LinearLayout>
