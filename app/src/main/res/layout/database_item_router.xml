<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="810dp"
    android:layout_height="50dp">

    <TextView
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_id"
        android:text="SCC33102_R01"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_owner"
        android:text="StoutyAlex"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_last_heard"
        android:text="12/12/1222 12:00:00"
        android:textSize="15sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_sensor_count"
        android:text="12"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_online"
        android:src="@drawable/on_green"
        android:padding="15dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/remove_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Remove"
            android:backgroundTint="#ff4343"/>

    </LinearLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Edit"
            android:backgroundTint="#0069cc"/>

    </LinearLayout>

</LinearLayout>