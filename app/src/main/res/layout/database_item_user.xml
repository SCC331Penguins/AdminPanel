<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="660dp"
    android:layout_height="50dp">

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_id"
        android:text="200"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_username"
        android:text="StoutyAlex"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center" />


    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_router_count"
        android:text="12"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center"/>


    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:id="@+id/database_item_admin"
        android:src="@drawable/on_green"
        android:padding="15dp"
        android:textSize="40sp"
        android:textColor="#000"
        android:gravity="center"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <LinearLayout
        android:layout_width="94dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/remove_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Remove"
            android:backgroundTint="#ff4343"/>

    </LinearLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#AAA" />

    <LinearLayout
        android:layout_width="94dp"
        android:layout_height="match_parent"
        android:background="#DDD"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Edit"
            android:backgroundTint="#0069cc"/>

    </LinearLayout>

</LinearLayout>