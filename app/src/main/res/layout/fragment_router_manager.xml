<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#373d52"
tools:context="app.android.scc331.setadmin.Fragments.RouterManagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shadow"
        android:orientation="horizontal"
        android:backgroundTint="#30323b">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="SET Admin Panel"
            android:paddingLeft="10dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="45sp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="REFRESH"
            android:gravity="center"
            android:textStyle="bold"
            android:backgroundTint="#3dc7f1"
            android:textColor="#FFF"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:id="@+id/refresh_button"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="LOGOUT"
            android:gravity="center"
            android:textStyle="bold"
            android:backgroundTint="#f13d3d"
            android:textColor="#FFF"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:id="@+id/logout_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="850dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:orientation="vertical"
            android:backgroundTint="#4a526c">

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="830dp"
                android:paddingTop="20dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="#DDD"
                    android:id="@+id/database_item_id"
                    android:text="Router ID"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#AAA" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="#DDD"
                    android:id="@+id/database_item_owner"
                    android:text="Owner"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#AAA" />

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:background="#DDD"
                    android:id="@+id/database_item_last_heard"
                    android:text="Last Heard"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#AAA" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#DDD"
                    android:id="@+id/database_item_sensor_count"
                    android:text="Sensors"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#AAA" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#DDD"
                    android:text="Online"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#AAA" />



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DDD" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#DDD"
                    android:text="Online"
                    android:id="@+id/database_item_online"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DDD" />


                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#AAA" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="3dp"
                android:background="#000"/>

            <ListView
                android:id="@+id/database_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#373d52"
                android:background="@drawable/shadow">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:backgroundTint="#4a526c"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ADD ROUTER"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/shadow"
                android:backgroundTint="#1fce1c"
                android:textColor="#FFF"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:id="@+id/add_router"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
