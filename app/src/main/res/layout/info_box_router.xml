<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="290dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:backgroundTint="#2079ff"
    android:background="@drawable/shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:tint="#FFF"
            android:padding="10dp"
            android:src="@drawable/router"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Routers"
            android:textColor="#FFF"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:typeface="sans"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TOTAL"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:typeface="sans"/>

                <TextView
                    android:id="@+id/total_router"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:typeface="sans"
                    android:textSize="60sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="CLAIMED"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/claimed_router"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textAlignment="center"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:textSize="60sp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="ONLINE"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/online_router"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textAlignment="center"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:textSize="60sp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="UNCLAIMED"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:typeface="sans"/>

                    <TextView
                        android:id="@+id/unclaimed_router"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textAlignment="center"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:typeface="sans"
                        android:textSize="60sp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>